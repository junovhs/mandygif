{
  "name": "disposable-night",
  "version": "1.0.0",
  "description": "Disposable camera film emulation",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "build": {
    "appId": "com.yourname.disposablenight",
    "productName": "Disposable Night",
    "files": [
      "main.js",
      "preload.js",
      "web/**/*"
    ],
    "mac": {
      "category": "public.app-category.graphics-design",
      "target": ["dmg", "zip"]
    },
    "win": {
      "target": ["nsis", "portable"]
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "category": "Graphics"
    }
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  }
}